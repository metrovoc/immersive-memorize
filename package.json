{
  "name": "immersive-memorize",
  "version": "0.9.0",
  "description": "Learn Japanese from streaming services like Netflix by creating contextual flashcards from subtitles",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,css}",
    "changelog": "auto-changelog -p",
    "version": "node scripts/sync-version.js && npm run changelog && git add manifest.json CHANGELOG.md"
  },
  "dependencies": {
    "@patdx/kuromoji": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "auto-changelog": "^2.5.0",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "eslint": "^8.56.0",
    "mini-css-extract-plugin": "^2.7.7",
    "postcss": "^8.4.33",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.2.4",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": 5,
    "backfillLimit": 3,
    "tagPattern": "v\\d+\\.\\d+\\.\\d+",
    "hideCredit": true
  }
}
